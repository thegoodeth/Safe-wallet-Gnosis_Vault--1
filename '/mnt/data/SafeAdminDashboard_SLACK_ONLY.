from zipfile import ZipFile
from pathlib import Path

# Define file contents
index_html = """
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Safe Admin Dashboard</title>
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <div id="dashboard">
    <h1>🔐 Safe Admin Dashboard</h1>
    <p>Safe Address: <span id="safeAddress"></span></p>
    <p>Network: <span id="network"></span></p>
    <div id="balanceSection">
      <h2>💰 Balances</h2>
      <ul id="balances"></ul>
    </div>
    <div id="historySection">
      <h2>📜 Transaction History</h2>
      <ul id="txHistory"></ul>
    </div>
  </div>
  <script src="config.js"></script>
  <script src="dashboard.js"></script>
</body>
</html>
"""

style_css = """
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 2rem;
  background: #f7f9fc;
  color: #333;
}
#dashboard {
  max-width: 800px;
  margin: auto;
  background: white;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
h1, h2 {
  color: #2c3e50;
}
ul {
  padding-left: 20px;
}
"""

dashboard_js = """
document.addEventListener("DOMContentLoaded", async () => {
  document.getElementById("safeAddress").textContent = config.safeAddress;
  document.getElementById("network").textContent = config.network;

  // Dummy balance
  document.getElementById("balances").innerHTML = '<li>ETH: 0.00</li>';

  // Dummy transaction history
  document.getElementById("txHistory").innerHTML = '<li>No recent transactions</li>';

  // Optionally add fetch logic here
});
"""

config_js = """
const config = {
  safeAddress: "0xAfD5f60aA8eb4F488eAA0eF98c1C5B0645D9A0A0",
  network: "Ethereum"
};
"""

# Create temp folder and write files
zip_path = "/mnt/data/SafeAdminDashboard_SLACK_ONLY.zip"
with ZipFile(zip_path, "w") as zipf:
    zipf.writestr("index.html", index_html)
    zipf.writestr("style.css", style_css)
    zipf.writestr("dashboard.js", dashboard_js)
    zipf.writestr("config.js", config_js)

zip_path
